<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/blackimsi">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/actionbarmain"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ahmetflix"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:src="@drawable/applogo"
            android:layout_marginStart="4dp"/>
        <EditText
            android:id="@+id/videobulucu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/mainarayici"
            android:layout_marginTop="16dp"
            android:textCursorDrawable="@color/sapsaro"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:clickable="true"
            android:focusable="true"
            android:inputType="textPersonName"
            android:hint="@string/video_aray_n" />
        <ImageView
            android:id="@+id/settings"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="15dp"
            android:src="@drawable/setting"
            android:layout_marginEnd="5dp"
            app:tint="@color/white" />
    </LinearLayout>

</LinearLayout>