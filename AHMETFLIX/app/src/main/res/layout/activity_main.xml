<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/blackimsi">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mainbackgraund"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ahmetflix"
            android:layout_width="45dp"
            android:layout_height="55dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/applogo" />

        <EditText
            android:id="@+id/videobulucu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/mainarayici"
            android:clickable="true"
            android:ems="10"
            android:focusable="true"
            android:hint="@string/video_aray_n"
            android:inputType="textPersonName"
            android:textCursorDrawable="@color/sapsaro" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_marginEnd="5dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:src="@drawable/settings" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>